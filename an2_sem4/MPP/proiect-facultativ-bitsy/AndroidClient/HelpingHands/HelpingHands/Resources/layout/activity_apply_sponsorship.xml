<?xml version="1.0" encoding="utf-8" ?> 
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <GridLayout
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:columnCount="2"      
         android:padding="@dimen/activity_horizontal_margin"
        >
        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"                
        android:text="Apply for sponship account" android:layout_columnSpan="2" android:textSize="18dp" />        
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_columnSpan="2"/>        

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"                
        android:text="CifFirma"/>
        <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:id="@+id/CifFirmaBox"                                    
             />

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"                
        android:text="Telefon"/>
        <EditText
            android:id="@+id/TelefonBox"
            android:inputType="phone"
            android:layout_width="300dp"
            android:layout_height="wrap_content" />
        
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"                
        android:text="Adresa Firmei"/>        
        <EditText android:layout_width="300dp" android:layout_height="wrap_content" 
            android:id="@+id/AdresaBox"  />

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"                
        android:text="Nume Firma"/>        
        <EditText android:layout_width="300dp" android:layout_height="wrap_content" 
            android:id="@+id/NumeBox" />


        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Type of sponsorship"
            android:height="70dp"
            android:paddingTop="26dp"
            android:layout_gravity="center_vertical" 
            />        
        <Spinner android:layout_width="200dp" android:layout_height="70dp" 
            android:id="@+id/TypesBox" 
             />



        <Button
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:id="@+id/ApplySponsorshipButton"
             android:backgroundTint="#B30064"
            android:textColor="#ffffff"   
             android:text="Send Application"/>        
        

    </GridLayout>
    
   

</RelativeLayout>